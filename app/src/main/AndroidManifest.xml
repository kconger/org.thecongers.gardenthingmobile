<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.thecongers.gardenthingmobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TemperatureActivity" />
        <activity android:name=".HumidityActivity" />
        <activity android:name=".Co2Activity" />
        <activity android:name=".AmbientActivity" />
        <activity android:name=".IrActivity" />
        <activity android:name=".LuxActivity" />
        <activity android:name=".SoilMoistureActivity" />
        <activity android:name=".UserSettingActivity" />
        <activity
            android:name=".GTSettingsActivity"
            android:label="@string/title_activity_ggsettings"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
